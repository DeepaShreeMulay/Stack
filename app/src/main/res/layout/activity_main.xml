<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:weightSum="5">

    <EditText
        android:id="@+id/valueEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter value"
        android:layout_margin="8dp"
        android:layout_gravity="center_vertical"
        android:inputType="number"
        android:layout_weight="3.5"/>

        <Button
            android:id="@+id/pushButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:layout_weight="1.5"
            android:textSize="9sp"
            android:text="Push" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:weightSum="5">
    <EditText
        android:id="@+id/bulkValueEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center_vertical"
        android:hint="Enter bulk values (comma separated)"
        android:inputType="text"
        android:layout_weight="3.5"/>

    <Button
        android:id="@+id/bulkPushButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:text="Push Bulk"
        android:textSize="9sp"
        android:layout_weight="1.5"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:weightSum="5">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Enter value to search"
        android:layout_gravity="center_vertical"
        android:inputType="number"
        android:layout_weight="3.5"/>

        <Button
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:layout_weight="1.5"
            android:textSize="9sp"
            android:text="Search" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:weightSum="6">

    <Button
        android:id="@+id/popButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:textSize="9sp"
        android:layout_gravity="center"
        android:text="Pop" />

    <Button
        android:id="@+id/traverseButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:textSize="9sp"
        android:layout_gravity="center"
        android:text="Traverse" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:textSize="9sp"
        android:layout_gravity="center"
        android:text="Clear Stack" />

    </LinearLayout>

</LinearLayout>
